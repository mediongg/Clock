<!DOCTYPE html>
<html>


<link rel="stylesheet" type="text/css" href="css/semantic.min.css" />
<link rel="stylesheet" type="text/css" href="css/calendar.min.css" />
<link rel="stylesheet" href="https://unpkg.com/tippy.js@5.1.1/themes/light.css" />
<link rel="stylesheet" type="text/css" href="css/style.css" />

<body>
    <div class="background"></div>
    <label class="uploadBtn">
        <input type="file" class="fileUploader" accept="image/png,image/gif,image/jpeg"/>
        <i class="upload icon"></i>
    </label>

    <div class="left-side-bar">
        <div class="ui form">
            <div class="four fields" style="align-items: center;">
                <div class="six wide field">
                    <div class="ui calendar" id="start">
                        <div class="ui input left icon">
                            <i class="calendar icon"></i>
                            <input id="" type="text" placeholder="Start">
                        </div>
                    </div>
                </div>
                <div class="six wide field">
                    <div class="ui calendar" id="end">
                        <div class="ui input left icon">
                            <i class="calendar icon"></i>
                            <input type="text" placeholder="End">
                        </div>
                    </div>
                </div>
                <div class="two wide field" style="text-align: center;">
                    <button
                        class="colorpicker jscolor  {valueElement:null, value: 'rgb(31, 252, 100)'}"
                    ></button>
                </div>
                <div class="four wide field">
                    <button
                        id="submit"
                        class="ui primary fluid button"
                        data-tooltip="aaa"
                        data-position="bottom center"
                    >
                        確認
                    </button>
                </div>
            </div>
        </div>
        <div class="mydivider"></div>

        <div style="background: rgba(0, 0, 0, 0.5); border-radius: 10px" id="task" class="ui celled list">
            <%- include('./task'); %>
        </div>
    </div>
    <div class="container">
        <canvas
            id="canvas"
            height="400"
            width="400"
        ></canvas>
    </div>

    <div class="ui modal">
        <div class="header">讀書心得 <span id="count">(0 字)</span></div>
        <div class="content">
            <form class="ui reply form">
                <div class="field">
                    <textarea id="note" style="resize: none;" maxlength="1000"></textarea>
                </div>
            </form>
        </div>
        <div class="actions">
            <div class="ui black deny button">
                Cancel
            </div>
            <div class="ui positive right button">
                OK
            </div>
        </div>
    </div>
</body>
<script src="https://unpkg.com/popper.js@1"></script>
<script src="https://unpkg.com/tippy.js@5"></script>
<script src="./js/jquery.min.js"></script>
<script src="./js/semantic.min.js"></script>
<script src="./js/calendar.min.js"></script>
<script src="./js/jscolor.js"></script>
<script src="./js/main.js"></script>
</html>